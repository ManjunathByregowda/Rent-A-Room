<!DOCTYPE html>
<html>
<head>
  <title>RentARoom</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<%= link_to "Cities", cities_path %>|<%= link_to "Rooms", rooms_path %>|<%= link_to "My Rooms", rooms_my_rooms_path %>|<%= link_to "My Bookings", bookings_my_bookings_path %>




<%if user_signed_in? && current_user.role.name ==  "admin" %>
	<%= link_to "Amenities", amenities_path %>
<%end%>

<% if user_signed_in? && (can? :authorization, Room) %>
	<%= link_to "Unauthorized Room", rooms_authorization_path %>
<%end%>

<% if user_signed_in? && (can? :confirmation, Booking) %>
	<%= link_to "Confirmation Rooms", bookings_confirmation_path %>
<% end %>


<% if user_signed_in? %> 
	Welcome<b><u> <%= current_user.username %>(<%= current_user.role.name %>) </b></u>(<%= link_to "Account Setting", edit_user_registration_path %> | <%= link_to "Logout", destroy_user_session_path, method: :delete %>) 
<% else %>
  <%= link_to "Login", new_user_session_path %> | <%= link_to "Register", new_user_registration_path %>
<% end %>


 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
 
<%= yield %>

</body>
</html>
