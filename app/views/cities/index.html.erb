<p id="notice"><%= notice %></p>

<h1>Listing Cities</h1>

<table>
  <thead>
    <tr>
      <th><b style="color:red;">Name</b></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><b style="color:green;"><%= city.name %></b></td>
        <td><%= link_to 'Show', city %></td>
        <%if user_signed_in?%>
        <% if can? :update, city %>
          <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <% end %>
        <% if can? :destroy, city%>
          <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        <% end %>  
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? && (can? :create, City.new) %>
  <%= link_to 'New City', new_city_path %>
<% end %>